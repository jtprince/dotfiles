#!/usr/bin/env python

import argparse
import pandas as pd
from pathlib import Path

parser = argparse.ArgumentParser(
    description="cleans up anthem claims csv (assumes unique first names)"
)
parser.add_argument(
    "claims_csv",
    type=Path,
    help="the claims.csv file Claims & Payments -> Claims -> [Export Claims]",
)
args = parser.parse_args()


def to_snake_case(column_name):
    return column_name.lower().replace(" ", "_")

dollar_columns = [
    "Billed",
    "Plan Discount",
    "Allowed",
    "Plan Paid",
    "Deductible",
    "Coinsurance",
    "Copay",
    "Not Covered",
    "Your Cost",
]

df = pd.read_csv(args.claims_csv)

for col in dollar_columns:
    df[col] = df[col].str.replace(r"[\$\,]", "", regex=True).astype(float)

df["Patient"] = df["Patient"].str.split().str[0]

df.columns = [to_snake_case(col) for col in df.columns]

outpath = args.claims_csv.with_suffix(".clean.csv")
df.to_csv(outpath)
