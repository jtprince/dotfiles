#!/usr/bin/env python3

from datetime import datetime
from datetime import timezone

now = datetime.now(timezone.utc)

start_of_year = datetime(
    year=now.year,
    month=1,
    day=1,
    hour=0,
    minute=0,
    tzinfo=timezone.utc
)

elapsed_time = now - start_of_year

elapsed_hours = elapsed_time.total_seconds() // 3600

print("Elapsed hours since start of year:")
print(elapsed_hours)
