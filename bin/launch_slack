#!/usr/bin/env ruby

delay = 0.6

# BROWSER = "google-chrome-stable \"$EXTRA_CHROME_BROWSER_FLAGS\" --new-window"
# SLACK_URL = "https://owletcare.slack.com"

SLACK = "slack"

[
  [SLACK],
#   [BROWSER, SLACK_URL],
].each do |cmd|
  cmd_joined = cmd.is_a?(Array) ? cmd.compact.join(' ') : cmd
  cmd_forked = "#{cmd_joined} &"
  system cmd_forked
  sleep delay
end
