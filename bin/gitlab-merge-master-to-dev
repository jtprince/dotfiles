#!/bin/bash

# requires that you've installed gitlab-cli (javascript version)
# https://github.com/vishwanatharondekar/gitlab-cli
#     cd ~ && npm install git-lab-cli -g
#     rehash
#     # run once inside your project to setup with api-code
#     cd ~/dev/myproject
#     lab
#     [settings saved to ~/.git/config]

lab mr --base master --target dev --message 'master to dev' --open


