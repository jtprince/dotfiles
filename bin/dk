#!/usr/bin/env ruby

if ARGV.size == 0
  puts "usage: #{File.basename(__FILE__)} cmd"
  exit
end

web_container_name = "thanos_web_1"

container_id = `docker ps -a --no-trunc --filter name=#{web_container_name} --format "{{.ID}}"`.chomp

cmd = %Q{docker exec -it #{container_id} bash -c "#{ARGV.join(' ')}"}

puts "RUNNING: #{cmd}"
system cmd
