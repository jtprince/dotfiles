#!/usr/bin/env ruby

delay = 0.6

BROWSER = "google-chrome-stable \"$EXTRA_CHROME_BROWSER_FLAGS\" --user-data-dir=/home/jtprince/.config/chrome-personal --new-window"
SMS_MESSAGES = "https://messages.google.com/web/"

[
  [BROWSER, SMS_MESSAGES],
].each do |cmd|
  cmd_joined = cmd.is_a?(Array) ? cmd.compact.join(' ') : cmd
  cmd_forked = "#{cmd_joined} &"
  system cmd_forked
  sleep delay
end
