#!/bin/bash

function cmd_exists {
    command -v "$1" >/dev/null 2>&1
}

if [ "$1" != "late" ]; then

    # gnome keyring
    eval $(gnome-keyring-daemon --start --components=gpg,pkcs11,secrets,ssh)

    # Xresources
    xrdb -merge ~/.Xresources
    if [ -e ~/.config/Xresources-local ]; then
        xrdb -merge ~/.config/Xresources-local
    fi

    # dunst
    dunst -config ~/.config/dunstrc &

    # pulseaudio
    start-pulseaudio-x11

    # xmodmap
    xmodmap ~/.config/xmodmap

    # thunar
    thunar --daemon &

    # lock screen
    xautolock-start

    # sound tray
    pasystray &

    # clipboard
    xclip -silent &

    # network manager applet
    if cmd_exists nm-applet ; then
        nm-applet &
    fi

    # dropbox
    if cmd_exists dropbox ; then
        dropbox start
    fi

    # pcloud
    if cmd_exists psyncgui ; then
        ( sleep 10 && psyncgui )&
    fi

    notify-send -u low 'initialized!'

else

    randomise-bkg

fi
