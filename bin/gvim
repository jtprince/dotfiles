#!/bin/bash

kitty --title "ðŸ…½vim: $*" -e /bin/bash -c '
  nvim '"$(printf '%q ' "$@")"';
  kitty_pid=$(ps -o ppid= -p $$ | tr -d " ");
  kill "$kitty_pid"
' &

