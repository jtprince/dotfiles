#!/usr/bin/env ruby

delay = 0.3

# An invocation using a separate gmail profile:
# chromium --new-window --user-data-dir=~/.config/chromium-crux

STANDALONE = nil
BROWSER = "chromium --new-window"
SLACK_URL = "https://3plcentral-tech.slack.com"
SLACK_APP = "slack"
TEAMS_URL = "teams-for-linux"
SMS_MESSAGES = "https://messages.google.com/web/"

[
  [SLACK_APP],
  [STANDALONE, TEAMS_URL],
  [BROWSER, SLACK_URL],
  [BROWSER, SMS_MESSAGES],
].each do |cmd|
  cmd_joined = cmd.is_a?(Array) ? cmd.compact.join(' ') : cmd
  cmd_forked = "#{cmd_joined} &"
  system cmd_forked
  sleep delay
end
