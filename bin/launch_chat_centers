#!/usr/bin/env ruby

delay = 0.3

# An invocation using a separate gmail profile:
# chromium --new-window --user-data-dir=~/.config/chromium-crux

BROWSER = "chromium --new-window"
TEAMS = "https://teams.microsoft.com"
SLACK = "https://3plcentral-tech.slack.com"

[
  [BROWSER, TEAMS],
  [BROWSER, SLACK],
].each do |cmd|
  cmd_joined = cmd.is_a?(Array) ? cmd.join(' ') : cmd
  cmd_forked = "#{cmd_joined} &"
  system cmd_forked
  sleep delay
end
