URxvt*color10: #44ff44
!yellow
URxvt*color3: #ffff33
urxvt*color11: #ffff33
!blue
URxvt*color4: #6666ff
URxvt*color12: #6666ff
!magenta
URxvt*color5: #ff33ff
URxvt*color13: #ff33ff
!cyan
URxvt*color6: #33ffff
URxvt*color14: #33ffff
!white
URxvt*color7: #efefef
URxvt*color15: #efefef


URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
URxvt*.shading: 17
! scrollbar style - rxvt (default), plain (most compact), next, or xterm
!URxvt.scrollstyle: plain
URxvt.scrollBar: false

!URxvt*troughColor:                    black
!URxvt*scrollBar_floating:             true
!URxvt*scrollBar_right:                true
URxvt*cursorColor:                     darkorange1
URxvt*foreground:                      white
URxvt*background:                      black
URxvt*cursorBlink:                     false
URxvt*termName:                        rxvt-256color
! URxvt*font:                            xft:Dejavu Sans Mono:pixelsize=10.5
! URxvt*boldFont:                        xft:Dejavu Sans Mono:pixelsize=10.5
!URxvt*font:                            xft:Ubuntu Mono:size=13
!URxvt*boldFont:                        xft:Ubuntu Mono:bold:size=13
URxvt*font:                            xft:Dejavu Sans Mono:size=12
!URxvt*boldFont:                        xft:Dejavu Sans Mono:bold:size=13
URxvt*colorBD:                         white

! 65535 is max on most machines (64 is default)
URxvt*saveLines: 65535

! removes the weird behavior when pressing ctrl-shift:
URxvt.iso14755 : false

! urxvt has poor defaults for scroll wheel behavior in secondary screens (like buffered `less`)
! This brings the behavior in line with what other terminals do (which is the right thing)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!https://github.com/muennich/urxvt-perls
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
URxvt.perl-ext-common: clipboard,font-size,keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
! overwrites the default Meta-s binding and allows to activate keyboard-select directly in backward search mode
! psttt--thats hitting <ctrl>-s to search backwards, which is what you almost always want!
URxvt.keysym.C-s: perl:keyboard-select:search
!URxvt.perl-ext-common: ...,clipboard
!!! could enable these when I get xclip working properly
!URxvt.clipboard.copycmd:  xclip -i -selection clipboard
!URxvt.clipboard.pastecmd: xclip -o -selection primary
URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste
URxvt.keysym.M-C-V: perl:clipboard:paste_escaped

! required for ctrl-shift bindings to work:
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

! open url in default browser (Windows+u [which is probably remapped to Alt+u])
! So, Windows+u to go into URL select mode, arrow keys to select url, enter to
! open in default browser
URxvt.perl-ext: default,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
