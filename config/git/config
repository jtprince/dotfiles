[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    # syntax-theme = GitHub
    syntax-theme = Monokai Extended
[interactive]
    diffFilter = delta --color-only
[core]
    # pager = less -F -X
    pager = delta
[pull]
    ff = only
[diff "sopsdiffer"]
	textconv = sops -d
[credential]
	helper = cache --timeout=2629800
[submodule]
	recurse = true
