# The alternate F-Lock keys:
#   Help
#   Undo
#   Redo
#   XF86New
#   SunOpen
#   XF86Close
#   XF86Reply
#   XF86MailForward
#   XF86Send
#   XF86Save
#   Print

mode "musicplayer" {
    bindsym Shift+S exec mocp --toggle shuffle
    bindsym n exec mocp --next
    bindsym b exec mocp --previous
    bindsym s exec mocp --stop

    bindsym $mod+parenright exec mocp -v +4
    bindsym $mod+parenleft exec mocp -v -4

    bindsym Shift+< exec mocp -v +4
    bindsym Shift+> exec mocp -v -4

    bindsym Shift+C exec mocp --clear

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "musicplayer"
bindsym $mod+Shift+M exec sakura -x "mocp -p"

