general {
       colors = false
       interval = 5
}

order += "disk /"
order += "disk /home/jtprince"
order += "wireless eth1"
order += "battery 0"
order += "load"
order += "time"

disk "/" {
       format = "/ %free"
}

disk "/home/jtprince" {
       format = "jtprince %free"
}

wireless eth1 {
#      format_up = "W: (%quality at %essid, %bitrate) %ip"
       format_up = "W (%quality %bitrate) %ip"
       format_down = "W down"
}

battery 0 {
       format = "%status %percentage %remaining"
       path = "/sys/class/power_supply/BAT1/uevent"
}

load {
       format = "LOAD %5min"
}

time {
       format = "%Y-%m-%d %I:%M %P | "
}


