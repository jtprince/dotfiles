# fonts
style "Sans" {
    font_name = "Sans 10"
}

widget_class "*" style "Sans"

gtk-font-name = "Sans 10"

## added from tpope gtkrc-2.0:

style "default" {
    font_name = "DejaVu Sans 9"
    #base[NORMAL] = "#ffffff"
}

#style "serif" = "default" {
    #font_name = "DejaVu Serif 9"
#}

style "mono" = "default" {
    font_name = "DejaVu Sans Mono 9"
}

#widget_class "*Notebook*" style "serif"
#widget_class "*Text*" style "mono"

# END added

# sounds
gtk-enable-event-sounds = 1

# icons
gtk-icon-theme-name = "Humanity"

# fonts
# see http://bbs.archlinux.org/viewtopic.php?pid=693878#p693878
#     http://library.gnome.org/devel/gtk/2.17/GtkSettings.html
# should match settings in ~/.Xdefaults and/or ~/.Xresources [which I keep identical by soft link]
gtk-xft-dpi       = 96
gtk-xft-antialias = 1
gtk-xft-hinting   = 1
#gtk-xft-hintstyle = hintfull
gtk-xft-hintstyle = hintslight
gtk-xft-rgba      = rgb
#gtk-xft-lcdfilter = lcddefault

# toolbars
# GTK_TOOLBAR_ICONS GTK_TOOLBAR_TEXT TK_TOOLBAR_BOTH GTK_TOOLBAR_BOTH_HORIZ
gtk-toolbar-style = GTK_TOOLBAR_ICONS
gtk-toolbar-icon-size = GTK_ICON_SIZE_SMALL_TOOLBAR
# icons in the menus  (not sure I really need this)
gtk-icon-sizes = "panel-menu=12,12"

