  cfg 'git'

  dot 'gtkrc-2.0'

  # if desired: 
  # cfg 'gtkrc-2.0-local'

  cfg 'gtk-3.0'

  ln 'zsh/zshenv', '.zshenv'
  cfg 'zsh'

  cfg 'fontconfig'

  cfg 'texlive'

  dot 'pryrc'
  dot 'irbrc'

  cfg 'dunst'
  cfg 'i3'

  cfg 'latex'

  ln 'okularpartrc', '.kde4/share/config/okularpartrc'

  cfg 'mpd'
  # yaourt -S mpd mpc ncmpcpp-xdg-config
  # mkdir -p ~/.cache/mpd
  # touch ~/.cache/mpd{pid,state,tag_cache}
  # mkdir -p ~/Music/playlists

  # use with ncmpcpp-xdg-config
  cfg 'ncmpcpp'

  cfg 'pulseaudio-ctl
end

