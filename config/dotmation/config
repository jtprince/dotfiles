  cfg 'dotmation'
  
  cfg 'alias'

  dot 'profile'
  dot 'xprofile'

  dot 'Xresources'
  ln 'Xresources', '.Xdefaults'

  cfg 'xmodmap'

  cfg 'git'
  
  dot 'gtkrc-2.0'
  cfg 'gtk-3.0'

  ln 'zsh/zshenv', '.zshenv'
  cfg 'zsh'

  cfg 'fontconfig'

  dot 'pryrc'
  dot 'irbrc'

  cfg 'dunst'
  cfg 'i3'

  cfg 'latex'

  #dot 'mpd'
  #ln 'ncmpcpp/config' .ncmpcpp/config
end

github "jtprince/dotfiles/config/vim" do
  cfg 'vimrc', 'vim/'
  cfg 'colors', 'vim/'
  cfg 'spell', 'vim/'
end

github "jtprince/dotfiles/bin" do
  ln '.'
end

